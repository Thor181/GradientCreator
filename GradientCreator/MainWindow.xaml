<Window x:Class="GradientCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradientCreator"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="400" MinHeight="450" Height="450" Width="800" Topmost="True">
    <Grid>
        <Grid  >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="1.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="20 10 20 0" >
                <Border.Background>
                    <LinearGradientBrush x:Name="MainGradient" >
                        <GradientStop Color="red" Offset="0"></GradientStop>
                        <GradientStop Color="Green" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Row="1" Margin="20 10 20 0">
                <Slider ></Slider>
            </Grid>
        </Grid>
    </Grid>
</Window>
